{
  "ConnectionStrings": {
    "ValueConnection": "Server=(localdb)\\mssqllocaldb;Database=ValueDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Span"
    ],
    "Enrich": [
      "WithClientIp",
      "WithMachineName",
      "WithEnvironmentUserName",
      "EnvironmentName",
      "WithSpan"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {ClientIp} {TraceId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "%BASEDIR%/Logs/log.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}